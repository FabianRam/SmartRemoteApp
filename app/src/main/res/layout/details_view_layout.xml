<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e4e4e4"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            android:background="@color/darkBlue" >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:src="@drawable/logo_remote" />
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView3"
        android:layout_marginTop="60dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <TextView
                android:id="@+id/imageViewNewButtonIcon"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="20dp"
                android:background="@drawable/roundcorner"
                android:gravity="center_vertical|center_horizontal"
                android:padding="0dp"
                android:src="@drawable/coffee_icon"
                                android:text="Replace"
                android:textSize="80dp"
                android:textColor="@color/darkBlue"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/brighterBlue">

                    <Spinner
                        android:id="@+id/spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@color/darkBlue"
                        android:entries="@array/icon_array"
                        android:popupBackground="@color/cherryRed"
                        android:textAlignment="center"
                        android:layout_gravity="left" />
                </FrameLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Position"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:layout_margin="10dp"
                    android:background="@color/cherryRed"
                    android:gravity="center"
                    android:textColor="@color/white" />

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/brighterBlue" >

                    <Spinner
                        android:id="@+id/positionSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@color/darkBlue"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:entries="@array/position_array"
                        android:popupBackground="@color/cherryRed" />

                </FrameLayout>

                <TextView
                android:id="@+id/textViewButtonName"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:text="from device"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_margin="10dp"
                android:background="@color/cherryRed"
                android:gravity="center"
                    android:textColor="@color/white"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp" />


                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/brighterBlue" >

                    <Spinner
                        android:id="@+id/deviceSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@color/darkBlue"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:entries="@array/position_array"
                        android:popupBackground="@color/cherryRed" />

                </FrameLayout>


                <TextView

                android:id="@+id/textViewNameOfAction"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_gravity="center_horizontal"
                android:text="Action"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_margin="10dp"
                android:background="@color/cherryRed"
                android:gravity="center"
                    android:textColor="@color/white" />



                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/brighterBlue" >

                    <Spinner
                        android:id="@+id/deviceActionSpinner"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:background="@color/darkBlue"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:layout_weight="1"
                        android:entries="@array/position_array"
                        android:popupBackground="@color/cherryRed" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="@color/brighterBlue"
                    android:layout_marginTop="20dp">

                    <android.support.v7.widget.SwitchCompat
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:text="Public Access"
                        android:id="@+id/publicAcessSwitch"
                        android:layout_marginLeft="50dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginRight="50dp"
                        android:textSize="16dp"
                        android:textOff="no public access"
                        android:textOn="public access"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:theme="@style/ColorSwitchStyle"
                        android:background="@color/darkBlue"
                        android:textColor="@color/white" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom">

            <Button
                android:id="@+id/detailsBackButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Back"
                android:background="@color/brighterBlue"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/accept_button"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:text="OK"
                android:background="@color/orange"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/detailsBackButton"
                android:textSize="20dp"
                android:layout_weight="1" />
        </LinearLayout>
    </RelativeLayout >


</FrameLayout>